{
  "name": "slack-notifier",
  "version": "v1.0.0",
  "description": "",
  "scripts": {
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "test:watch": "yarn test --watch --watch-extensions ts",
    "dist:dependencies": "rm -rf node_modules && yarn install --production && zip -r terraform/lambda node_modules LICENSE README.md",
    "dist:lambda": "yarn && yarn tsc && yarn prettier --write dist/**/*.js && (cd dist; zip -r ../terraform/lambda ./*)",
    "dist": "yarn dist:dependencies && yarn dist:lambda",
    "build-action": "yarn ncc build ping-slack/index.ts -o ping-slack/dist"
  },
  "devDependencies": {
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.11.2",
    "@types/request": "^2.48.5",
    "@zeit/ncc": "^0.22.3",
    "aws-sdk": "^2.612.0",
    "mocha": "^6.2.0",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0",
    "github-api": "^3.3.0",
    "request": "^2.88.2"
  }
}
